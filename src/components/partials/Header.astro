---
const pathname = Astro.url.pathname;

const isHomePage = pathname === '/';
const isWritingPage = pathname.startsWith('/writing');
---

<header
    class="w-full flex justify-center items-center fixed top-0 left-0 right-0 z-50"
>
    <div
        class="w-max mt-5 bg-white/80 dark:bg-black/80 backdrop-blur-md border border-gray-200 dark:border-gray-800 rounded-full p-1 shadow-lg"
    >
        <nav class="flex items-center">
            <ul class="flex items-center gap-1">
                <li>
                    <a
                        href="/"
                        class:list={[
                            'font-medium transition-colors block px-5 py-2 rounded-full',
                            'text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white',
                            isHomePage &&
                                'text-white dark:text-black bg-gradient-to-r from-yellow-500 to-orange-500 dark:from-purple-600 dark:to-red-600 shadow-md',
                        ]}>ğŸ° Root</a
                    >
                </li>
                <li>
                    <a
                        href="/writing"
                        class:list={[
                            'font-medium transition-colors block px-5 py-2 rounded-full',
                            'text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white',
                            isWritingPage &&
                                'text-white dark:text-black bg-gradient-to-r from-yellow-500 to-orange-500 dark:from-purple-600 dark:to-red-600 shadow-md',
                        ]}>ğŸ“œScrolls</a
                    >
                </li>
            </ul>
        </nav>
    </div>
</header>
