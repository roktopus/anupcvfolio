---
// Patent icon SVG
const patentIcon = `
<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
</svg>
`;
---

<div class="flex flex-col gap-6">
    <h2 class="text-headings text-lg font-semibold">Patents</h2>

    <div class="flex flex-wrap gap-3">
        <a
            href="https://image-ppubs.uspto.gov/dirsearch-public/print/downloadPdf/20240019995"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 bg-muted-foreground/20 px-3 py-2 rounded-lg hover:bg-muted-foreground/30 transition-colors"
        >
            <div class="w-5 h-5 text-blue-600" set:html={patentIcon} />
            <span class="text-sm"
                >USER INTERFACE (UI) FOR POWER SYSTEM CONTROLLER DEVICE</span
            >
        </a>
    </div>
</div>
